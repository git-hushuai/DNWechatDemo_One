     <swiper class='vol-swiper' current='{{current}}' bindchange='get_index'>
        <swiper-item  wx:for="{{content_Lists}}">
                  <scroll-view class='scroll-views' scroll-y="true" bindscrolltolower="bindscrolltolowerAction" scroll-x="false" enable-back-to-top="true"> 
                <block wx:for="{{content_Lists[current].content_list}}" wx:for-index="idx" wx:key="{{id}}">
                  
                         <import src="templates/volItem.wxml" />
                         <template is="vol-item" data="{{item: content_Lists[current]['content_list'][idx]}}" />  
                </block>
             </scroll-view>   
        </swiper-item>
    </swiper> 
